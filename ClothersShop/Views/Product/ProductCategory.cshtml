@model List<ClothersShop.Models.ProductCategory>

    <div class="collapse navbar-collapse" id="mc-horizontal-menu-collapse">
        <ul class="nav navbar-nav">
            @foreach (var item in Model.Where(x => x.ParentID == null))
            {
                var child = Model.Where(x => x.ParentID == item.ID);
                <li class="dropdown">
                    <a href="/san-pham/@item.MetaTitle-@item.ID" class="dropdown-toggle" data-hover="dropdown" data-toggle="dropdown">@item.Name</a>
                    @if (child.Count() > 0)
                    {
                        <ul class="dropdown-menu">
                            <li>
                                <div class="yamm-content">
                                    <div class="row">
                                        <h2>@item.Name</h2>
                                        <ul>
                                            @foreach (var childItem in child)
                                            {
                                                <li><a href="/san-pham/@childItem.MetaTitle-@childItem.ID">@childItem.Name</a></li>

                                            }
                                        </ul>
                                        <!-- /.col -->
                                    </div>
                                </div>
                            </li>
                        </ul>
                    }
                </li>
            }
        </ul>
    </div>


